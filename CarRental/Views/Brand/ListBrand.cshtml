@model IEnumerable<CarRental.Models.BrandModel>

@{
    ViewBag.Title = "ListBrand";
}

<h2>ListBrand</h2>

<p>
    @Html.ActionLink("Create New", "AddBrand")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Brand)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Brand)
        </td>
        <td>
            @Html.ActionLink("Edit", "UpdateBrand", new { id=item.Id }) |
            @Html.ActionLink("Delete", "DeleteBrand", new { id=item.Id })
        </td>
    </tr>
}

</table>
